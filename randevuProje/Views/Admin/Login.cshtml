@model randevuProje.Models.Admin

@{
    Layout = null;
}
<!doctype html>
<html lang="tr" class="light-theme">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Content/images/LogoSirket.png" type="image/png" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin/css/bootstrap-extended.css" rel="stylesheet" />
    <link href="~/Content/admin/css/style.css" rel="stylesheet" />
    <link href="~/Content/admin/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- loader-->
    <link href="~/Content/admin/css/pace.min.css" rel="stylesheet" />

    <title>Giriş Yapınız...</title>
</head>
<body>

    <!--start wrapper-->
    <div class="wrapper">

        <!--start content-->
        <main class="authentication-content">
            <div class="container-fluid">
                <div class="authentication-card">
                    <div class="card shadow rounded-0 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6 bg-login d-flex align-items-center justify-content-center">
                                <img src="~/Content/admin/images/error/login-img.jpg" class="img-fluid" alt="">
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body p-4 p-sm-5">
                                    <h5 class="card-title">Giriş Yap</h5>
                                    <p class="card-text mb-5"></p>


                                    @using (Html.BeginForm("AdminLogin", "Admin", new { FormMethod.Post }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <div class="ms-auto position-relative">
                                                    <div class="position-absolute top-50 translate-middle-y search-icon px-3"></div>
                                                    <i class="bi bi-person-fill"></i> @Html.TextBoxFor(a => a.adi_soyadi, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "autofocus", autocomplete = "off" })
                                                </div>
                                                &nbsp;&nbsp;&nbsp;<label for="inputEmailAddress" class="form-label">
                                                    @Html.ValidationMessageFor(a => a.adi_soyadi)
                                                </label>
                                            </div>
                                            <div class="col-12">
                                                <div class="ms-auto position-relative">
                                                    <i class="bi bi-lock-fill"></i><div class="position-absolute top-50 translate-middle-y search-icon px-3"></div>
                                                    @Html.PasswordFor(a => a.sifre, new { @class = "form-control", placeholder = "Parola" })
                                                </div>
                                                &nbsp;&nbsp;&nbsp;<label for="inputChoosePassword" class="form-label">
                                                    @Html.ValidationMessageFor(a => a.sifre)
                                                </label>
                                            </div>
                                            @if (ViewBag.Hata != null)
                                            {
                                                <div class="alert alert-danger mt-4">
                                                    @ViewBag.Hata
                                                </div>
                                            }
                                            <div class="col-6">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary radius-30">Giriş Yap</button>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="d-grid">
                                                    <button type="button" onclick="location='/Home/Index'" class="btn btn-danger radius-30">İptal</button>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <p class="mb-0">İrtibat >> <a href="mailto:iletisim@bungalovcum.com">iletisim@bungalovcum.com</a></p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!--end page main-->

    </div>
    <!--end wrapper-->
    <!--plugins-->
    <script src="~/Content/admin/js/jquery.min.js"></script>
    <script src="~/Content/admin/js/pace.min.js"></script>


</body>
</html>
